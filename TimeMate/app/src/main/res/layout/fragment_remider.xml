<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/reminder_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter reminder message"
        android:minHeight="48dp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/set_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF8A65"
        android:text="Set Time" />

    <Button
        android:id="@+id/set_reminder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF8A65"
        android:text="Set Reminder" />

    <!-- TextView to display the added reminder -->
    <TextView
        android:id="@+id/display_reminder_text_view"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp" />
</LinearLayout>
